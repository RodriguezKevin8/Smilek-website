---
import img from "../img/main-fund.webp"; //Import the selected image for the main background
---

<!--This component is in charge of displaying a background next to the smilek character, 
  it does not have any type of programming, it is all design. -->
<div
  class="grid w-full grid-cols-1 md:grid-cols-2 xl:gap-14 md:gap-10 bg-black"
  id="main-info-img"
>
  <div
    class="flex flex-col justify-center col-span-1 text-center lg:text-center ms:flex"
  >
    <h1
      class="space-grotesk text-4xl font-extrabold leading-tight lg:text-8xl text-dark-grey-900 text-white mt-8"
    >
      SMILEK
    </h1>
    <div>
      <p
        class="alegreya-sans text-base font-normal leading-8 text-grey-900 text-center mb-6 px-5 text-white"
      >
        IT'S NEVER BEEN EASIER TO SMILE TO THE BANKS!
      </p>
      <a
        href="https://jup.ag/swap/SOL-7x4FgiFfeqzs1tiUNvJzpt47GtLXAJ8Jfn8G1Hyyu6JH"
        target="_blank"
      >
        <button
          class="bg-white text-black hover:bg-yellow-500 hover:text-black py-2 px-6 rounded-full text-sm font-bold my-6"
        >
          BUY NOW
        </button>
      </a>
    </div>
  </div>
  <div class="items-center justify-end hidden col-span-1 md:flex">
    <img
      class="w-4/5 rounded-md h-96 md:h-auto"
      src="img/man.png"
      alt="header image"
    />
  </div>
</div>

<style>
  #main-info-img {
    background-image: url("img/fund.jfif");
  }

  @media screen and (max-width: 765px) {
  }
  .space-grotesk {
    font-family: "Space Grotesk", sans-serif;
    font-optical-sizing: auto;
    font-weight: <weight>;
    font-style: normal;
  }
  .alegreya-sans sc-black {
    font-family: "Alegreya Sans SC", sans-serif;
    font-weight: 900;
    font-style: normal;
  }
</style>
