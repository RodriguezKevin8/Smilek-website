---
const { DataList = [], info } = Astro.props;
---

<div class="flex flex-wrap mx-3 mb-5">
  <div class="w-full px-2 mb-6">
    <div
      class="relative flex-[1_auto] flex flex-col break-words min-w-0 bg-clip-border rounded-[.95rem] bg-gray-800 m-4"
    >
      <div class="relative flex flex-col min-w-0 break-words bg-light/30">
        <!-- card header -->
        <div
          class="px-4 pt-5 flex justify-between items-stretch flex-wrap min-h-[70px] pb-0 bg-transparent"
        >
          <h3
            class="flex flex-col items-start justify-center m-2 ml-0 font-medium text-xl/tight text-dark"
          >
            <span class="mr-2 font-semibold text-white">Projects $SMILEK</span>
            <span
              class="mt-1 font-normal text-secondary-dark text-lg/normal text-white"
              >"Explore financial freedom with $SMILEK! This exciting
              cryptocurrency is available for purchase on a variety of
              decentralized exchanges (DEX)."</span
            >
          </h3>
        </div>
        <div class="flex-auto block py-8 pt-6 px-9">
          <div class="overflow-x-auto">
            <table
              class="w-full my-0 align-middle text-dark border-neutral-200"
            >
              <thead class="align-bottom">
                <tr class="font-semibold text-[0.95rem] text-secondary-dark">
                  <th class="pb-3 text-start min-w-[165px] text-white"
                    >EXCHANGE</th
                  >
                  <th class="pb-3 text-end min-w-[90px] text-white">PAR</th>
                  <th class="pb-3 text-end min-w-[90px] text-white">TRUST</th>
                  <th class="pb-3 pr-12 text-end min-w-[165px] text-white"
                    >UPDATED</th
                  >
                </tr>
              </thead>
              <tbody class="px-9 mx-5">
                {
                  DataList &&
                    DataList.map((Data, index) => (
                      <tr class="border-b border-solid last:border-b-0 mx-2">
                        <td class="p-2 pl-0">
                          <div class="flex items-center">
                            <div class="relative inline-block shrink-0 rounded-2xl me-4">
                              <img
                                src={Data.img}
                                class="w-[50px] h-[50px] inline-block shrink-0 rounded-2xl"
                                alt=""
                              />
                            </div>
                            <div class="flex flex-col justify-start">
                              <a
                                href="javascript:void(0)"
                                class="mb-1 font-semibold transition-colors duration-200 ease-in-out text-lg/normal text-secondary-inverse hover:text-primary text-white"
                              >
                                {Data.ExchaneName}
                              </a>
                            </div>
                          </div>
                        </td>
                        <td class="p-2 pr-0 text-end">
                          <span class="font-semibold text-light-inverse text-md/normal text-white">
                            {Data.par}
                          </span>
                        </td>
                        <td class="p-3 pr-0 text-end">
                          <span class="text-center align-baseline inline-flex px-2 py-1 mr-auto items-center font-semibold text-base/none text-success bg-success-light rounded-lg text-white">
                            <svg
                              xmlns="http://www.w3.org/2000/svg"
                              fill="none"
                              viewBox="0 0 24 24"
                              stroke-width="1.5"
                              stroke="currentColor"
                              class="w-5 h-5 mr-1 text-white"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M2.25 18L9 11.25l4.306 4.307a11.95 11.95 0 015.814-5.519l2.74-1.22m0 0l-5.94-2.28m5.94 2.28l-2.28 5.941"
                              />
                            </svg>
                            HIGH
                          </span>
                        </td>
                        <td class="p-3 pr-10 text-end">
                          <span class="text-center align-baseline inline-flex px-3 py-3 mr-auto items-center font-semibold text-[.95rem] leading-none text-primary bg-primary-light rounded-lg text-white">
                            RECENTLY
                          </span>
                        </td>
                      </tr>
                    ))
                }
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
